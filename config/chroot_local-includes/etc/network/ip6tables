# Drop incoming connections
*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [0:0]

# Allow all established connections
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

# Allow ICMP
-A INPUT -p icmpv6 -j ACCEPT

# Allow SSH
-A INPUT -p tcp --dport ssh -m state --state NEW -j ACCEPT

# Allow IPP from sixxs.net subnet
-A INPUT -s 2001:1938:269::/48 -p tcp --dport ipp -m state --state NEW -j ACCEPT

# Allow SNMP from onyx
-A INPUT -s 2001:470:21:20::480d:5f2b -p udp --dport snmp -m state --state NEW -j ACCEPT

COMMIT
